print "Let's see how long you have lived in days, minutes and seconds."
name = raw_input("name: ")
print "now enter your age"
age = float(raw_input ("age: "))
days = age * 365.25
hours = age * 365.25 * 24
minutes = age * 365.25 * 24 * 60
seconds = age * 365.25 * 24 * 60 * 60
print name, "has been alive for", days, "days", hours, "hours", minutes, "minutes and", seconds, "seconds! Wow!"
